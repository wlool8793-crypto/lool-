{
  "label": "Court",
  "description": "Represents a court in the judicial hierarchy",
  "required_properties": [
    {
      "name": "court_id",
      "type": "string",
      "description": "Unique identifier for the court",
      "constraints": ["UNIQUE", "NOT NULL"]
    },
    {
      "name": "name",
      "type": "string",
      "description": "Official name of the court",
      "constraints": ["NOT NULL"]
    },
    {
      "name": "jurisdiction",
      "type": "string",
      "description": "Country/jurisdiction (Bangladesh, India, Pakistan)",
      "constraints": ["NOT NULL"]
    },
    {
      "name": "court_level",
      "type": "integer",
      "description": "Level in hierarchy: 5=Supreme Court, 4=High Court, 3=District Court, 2=Tribunal, 1=Other",
      "constraints": ["NOT NULL"],
      "range": "1-5"
    },
    {
      "name": "court_type",
      "type": "enum",
      "description": "Type of court",
      "constraints": ["NOT NULL"],
      "values": ["Supreme", "High", "District", "Tribunal", "Appellate", "Trial"]
    }
  ],
  "optional_properties": [
    {
      "name": "parent_court_id",
      "type": "string",
      "description": "Reference to parent court in hierarchy (e.g., High Court for District Court)"
    },
    {
      "name": "location",
      "type": "string",
      "description": "Physical location/city"
    },
    {
      "name": "established_date",
      "type": "date",
      "description": "Date when court was established"
    },
    {
      "name": "appellate_jurisdiction",
      "type": "boolean",
      "description": "Whether court has appellate jurisdiction"
    },
    {
      "name": "original_jurisdiction",
      "type": "boolean",
      "description": "Whether court has original jurisdiction"
    },
    {
      "name": "binding_precedent_scope",
      "type": "string",
      "description": "Scope of binding precedent (national, state, district)"
    },
    {
      "name": "website",
      "type": "string",
      "description": "Official website URL"
    },
    {
      "name": "created_at",
      "type": "datetime",
      "description": "Node creation timestamp"
    },
    {
      "name": "updated_at",
      "type": "datetime",
      "description": "Last update timestamp"
    },
    {
      "name": "source",
      "type": "string",
      "description": "Data source (e.g., 'IndianKanoon', 'BDLaws', 'Manual Entry')"
    },
    {
      "name": "extracted_at",
      "type": "datetime",
      "description": "Timestamp of data extraction"
    },
    {
      "name": "extracted_by",
      "type": "string",
      "description": "Extractor identifier (e.g., 'GPT-4', 'Gemini-2.5-Pro', 'Manual')"
    },
    {
      "name": "confidence_score",
      "type": "float",
      "description": "Extraction confidence score (0.0-1.0)"
    },
    {
      "name": "version",
      "type": "integer",
      "description": "Version number (increments on updates, default: 1)"
    },
    {
      "name": "changelog",
      "type": "list<json>",
      "description": "Array of change records: [{version, date, changes, updated_by}]"
    },
    {
      "name": "trust_score",
      "type": "float",
      "description": "Composite trust score (0.0-1.0)"
    },
    {
      "name": "verification_status",
      "type": "string",
      "description": "Verification status: Verified, Unverified, Disputed, Deprecated"
    },
    {
      "name": "authority_level",
      "type": "integer",
      "description": "Authority level (1-5, where 5=Supreme Court, 4=High Court, etc.)"
    }
  ],
  "indexes": [
    {
      "type": "composite",
      "name": "court_hierarchy_index",
      "properties": ["jurisdiction", "court_level"]
    },
    {
      "type": "property",
      "name": "court_name_index",
      "properties": ["name"]
    },
    {
      "type": "property",
      "name": "court_source_index",
      "properties": ["source"]
    },
    {
      "type": "property",
      "name": "court_extracted_by_index",
      "properties": ["extracted_by"]
    },
    {
      "type": "property",
      "name": "court_trust_score_index",
      "properties": ["trust_score"]
    },
    {
      "type": "property",
      "name": "court_verification_status_index",
      "properties": ["verification_status"]
    },
    {
      "type": "property",
      "name": "court_authority_level_index",
      "properties": ["authority_level"]
    }
  ],
  "example": {
    "court_id": "bd_sc_001",
    "name": "Supreme Court of Bangladesh",
    "jurisdiction": "Bangladesh",
    "court_level": 5,
    "court_type": "Supreme",
    "parent_court_id": null,
    "location": "Dhaka",
    "established_date": "1972-12-16",
    "appellate_jurisdiction": true,
    "original_jurisdiction": true,
    "binding_precedent_scope": "national"
  }
}
