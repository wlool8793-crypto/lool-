# Neo4j Database Configuration
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control!

# Neo4j Connection
NEO4J_URL=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-secure-password-here
NEO4J_DATABASE=neo4j

# Google AI Configuration (for Schema Evolution System)
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL_NAME=gemini-2.5-pro

# Vertex AI Express (alternative to Google AI)
VERTEX_AI_EXPRESS_KEY=your-vertex-ai-express-key-here

# Optional: Indian Kanoon Database Path
INDIANKANOON_DB_PATH=/workspaces/lool-/data-collection/data/indiankanoon.db

# Optional: Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/neo4j_kg.log
