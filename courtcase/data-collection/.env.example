# IndianKanoon Scraper Configuration Template
# Copy this file to .env and configure with your actual values
# IMPORTANT: Never commit .env file with real credentials to git

# Database Configuration
DATABASE_URL=sqlite:///data/indiankanoon.db
# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://username:password@localhost:5432/indiankanoon

# Scraping Configuration
BASE_URL=https://indiankanoon.org
HEADLESS_MODE=true
DOWNLOAD_PDFS=true
PDF_DOWNLOAD_PATH=./data/pdfs

# Rate Limiting (seconds between requests)
# Recommended: 2-5 seconds to be respectful to the server
# With proxies: 0.5-1 second is safe
REQUEST_DELAY=2
MAX_REQUESTS_PER_SECOND=10.0

# Search Parameters
START_YEAR=2020
END_YEAR=2024
COURTS=supremecourt,highcourt

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/scraper.log

# Proxy Configuration (WebShare.io)
# Sign up at: https://www.webshare.io/
# Get your API key from: https://proxy.webshare.io/userapi/dashboard
# IMPORTANT: DO NOT commit this API key to version control!
# Leave blank to run without proxies
WEBSHARE_API_KEY=

# Alternative: Load proxies from a file
# Format: host:port:username:password (one per line)
# PROXY_FILE=./config/proxies.txt

# Proxy rotation strategy
# Options: round_robin (default), least_used, best_performing
PROXY_ROTATION_STRATEGY=round_robin

# Google Drive Configuration (Optional)
# Required only if uploading PDFs to Google Drive
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CREDENTIALS_PATH=./config/credentials.json
GOOGLE_TOKEN_PATH=./config/token.pickle
DRIVE_FOLDER_ID=your_folder_id_here

# Security Settings
# Set to 'production' in production environment
ENVIRONMENT=development

# PostgreSQL Configuration (for future migration)
# POSTGRES_USER=indiankanoon_user
# POSTGRES_PASSWORD=your_secure_password_here
# POSTGRES_DB=indiankanoon
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432

# ==========================================
# MULTI-CLOUD VM DEPLOYMENT CONFIGURATION
# ==========================================

# DigitalOcean (https://cloud.digitalocean.com/account/api/tokens)
DIGITALOCEAN_TOKEN=
DIGITALOCEAN_VM_COUNT=15
DIGITALOCEAN_VM_SIZE=s-1vcpu-1gb
DIGITALOCEAN_REGIONS=nyc1,nyc3,sfo3,sgp1,lon1,fra1,tor1,blr1,ams3

# Vultr (https://my.vultr.com/settings/#settingsapi)
VULTR_API_KEY=
VULTR_VM_COUNT=10
VULTR_VM_PLAN=vc2-1c-1gb
VULTR_REGIONS=ewr,ord,dfw,sea,lax,atl,ams,lhr,sgp,nrt

# Linode (https://cloud.linode.com/profile/tokens)
LINODE_TOKEN=
LINODE_VM_COUNT=10
LINODE_VM_TYPE=g6-nanode-1
LINODE_REGIONS=us-east,us-central,us-west,us-southeast,ca-central,eu-west,ap-south,ap-northeast

# Oracle Cloud (Always Free Tier)
ORACLE_USER_OCID=
ORACLE_TENANCY_OCID=
ORACLE_FINGERPRINT=
ORACLE_PRIVATE_KEY_PATH=
ORACLE_REGION=us-ashburn-1
ORACLE_VM_COUNT=4
ORACLE_VM_SHAPE=VM.Standard.E2.1.Micro

# SSH Keys (for VM access)
SSH_PUBLIC_KEY_PATH=~/.ssh/id_rsa.pub
SSH_PRIVATE_KEY_PATH=~/.ssh/id_rsa
