{
  "label": "Document",
  "description": "Represents a source document (PDF, HTML, etc.) containing legal content",
  "required_properties": [
    {
      "name": "document_id",
      "type": "string",
      "description": "Unique identifier for the document",
      "constraints": ["UNIQUE", "NOT NULL"]
    },
    {
      "name": "document_type",
      "type": "string",
      "description": "Type of document (judgment, statute, order, notification, etc.)",
      "constraints": ["NOT NULL"]
    },
    {
      "name": "source",
      "type": "string",
      "description": "Source (IndianKanoon, official website, etc.)",
      "constraints": ["NOT NULL"]
    },
    {
      "name": "extracted_at",
      "type": "datetime",
      "description": "Timestamp of data extraction",
      "constraints": ["NOT NULL"]
    },
    {
      "name": "extracted_by",
      "type": "string",
      "description": "Extractor identifier (e.g., 'GPT-4', 'Gemini-2.5-Pro', 'Manual')",
      "constraints": ["NOT NULL"]
    },
    {
      "name": "confidence_score",
      "type": "float",
      "description": "Extraction confidence score (0.0-1.0)",
      "constraints": ["NOT NULL"]
    },
    {
      "name": "created_at",
      "type": "datetime",
      "description": "Node creation timestamp",
      "constraints": ["NOT NULL"]
    },
    {
      "name": "updated_at",
      "type": "datetime",
      "description": "Last update timestamp",
      "constraints": ["NOT NULL"]
    },
    {
      "name": "version",
      "type": "integer",
      "description": "Version number (increments on updates, default: 1)",
      "constraints": ["NOT NULL"]
    },
    {
      "name": "trust_score",
      "type": "float",
      "description": "Composite trust score (0.0-1.0)",
      "constraints": ["NOT NULL"]
    },
    {
      "name": "verification_status",
      "type": "string",
      "description": "Verification status: Verified, Unverified, Disputed, Deprecated",
      "constraints": ["NOT NULL"]
    }
  ],
  "optional_properties": [
    {
      "name": "title",
      "type": "string",
      "description": "Title of the document"
    },
    {
      "name": "file_path",
      "type": "string",
      "description": "Path to the document file"
    },
    {
      "name": "url",
      "type": "string",
      "description": "URL to the document"
    },
    {
      "name": "file_format",
      "type": "string",
      "description": "File format (PDF, HTML, DOCX, etc.)"
    },
    {
      "name": "file_size",
      "type": "integer",
      "description": "File size in bytes"
    },
    {
      "name": "page_count",
      "type": "integer",
      "description": "Number of pages"
    },
    {
      "name": "language",
      "type": "string",
      "description": "Language of the document"
    },
    {
      "name": "ocr_processed",
      "type": "boolean",
      "description": "Whether OCR has been performed"
    },
    {
      "name": "extracted_text",
      "type": "string",
      "description": "Extracted text from document"
    },
    {
      "name": "jurisdiction",
      "type": "string",
      "description": "Jurisdiction"
    },
    {
      "name": "publication_date",
      "type": "date",
      "description": "Date of publication"
    },
    {
      "name": "checksum",
      "type": "string",
      "description": "File checksum for integrity verification"
    },
    {
      "name": "changelog",
      "type": "list<json>",
      "description": "Array of change records: [{version, date, changes, updated_by}]"
    }
  ],
  "indexes": [
    {
      "type": "property",
      "name": "document_type_index",
      "properties": ["document_type"]
    },
    {
      "type": "composite",
      "name": "document_source_index",
      "properties": ["source", "jurisdiction"]
    },
    {
      "type": "property",
      "name": "document_extracted_by_index",
      "properties": ["extracted_by"]
    },
    {
      "type": "property",
      "name": "document_trust_score_index",
      "properties": ["trust_score"]
    },
    {
      "type": "property",
      "name": "document_verification_status_index",
      "properties": ["verification_status"]
    }
  ],
  "example": {
    "document_id": "doc_bd_sc_2023_123",
    "document_type": "judgment",
    "title": "Bangladesh Bank vs. XYZ Corporation Judgment",
    "file_format": "PDF",
    "page_count": 45,
    "language": "English",
    "jurisdiction": "Bangladesh",
    "publication_date": "2023-06-15",
    "source": "Supreme Court of Bangladesh",
    "ocr_processed": true
  }
}
