{
  "label": "Legal_Issue",
  "description": "Represents a specific legal issue or question raised in a case",
  "required_properties": [
    {
      "name": "issue_id",
      "type": "string",
      "description": "Unique identifier for the legal issue",
      "constraints": ["UNIQUE", "NOT NULL"]
    },
    {
      "name": "description",
      "type": "string",
      "description": "Description of the legal issue",
      "constraints": ["NOT NULL"]
    }
  ],
  "optional_properties": [
    {
      "name": "issue_type",
      "type": "string",
      "description": "Type of issue (procedural, substantive, constitutional, etc.)"
    },
    {
      "name": "legal_domain",
      "type": "string[]",
      "description": "Legal domains relevant to this issue"
    },
    {
      "name": "keywords",
      "type": "string[]",
      "description": "Keywords for search"
    },
    {
      "name": "complexity",
      "type": "string",
      "description": "Complexity level (simple, moderate, complex)"
    },
    {
      "name": "chunk_text",
      "type": "string",
      "description": "Preprocessed text for RAG"
    },
    {
      "name": "created_at",
      "type": "datetime",
      "description": "Node creation timestamp"
    },
    {
      "name": "updated_at",
      "type": "datetime",
      "description": "Last update timestamp"
    },
    {
      "name": "source",
      "type": "string",
      "description": "Data source (e.g., 'IndianKanoon', 'BDLaws', 'Manual Entry')"
    },
    {
      "name": "extracted_at",
      "type": "datetime",
      "description": "Timestamp of data extraction"
    },
    {
      "name": "extracted_by",
      "type": "string",
      "description": "Extractor identifier (e.g., 'GPT-4', 'Gemini-2.5-Pro', 'Manual')"
    },
    {
      "name": "confidence_score",
      "type": "float",
      "description": "Extraction confidence score (0.0-1.0)"
    },
    {
      "name": "version",
      "type": "integer",
      "description": "Version number (increments on updates, default: 1)"
    },
    {
      "name": "changelog",
      "type": "list<json>",
      "description": "Array of change records: [{version, date, changes, updated_by}]"
    },
    {
      "name": "trust_score",
      "type": "float",
      "description": "Composite trust score (0.0-1.0)"
    },
    {
      "name": "verification_status",
      "type": "string",
      "description": "Verification status: Verified, Unverified, Disputed, Deprecated"
    }
  ],
  "indexes": [
    {
      "type": "fulltext",
      "name": "issue_fulltext_index",
      "properties": ["description", "keywords"]
    },
    {
      "type": "vector",
      "name": "issue_embedding_index",
      "properties": ["embedding"],
      "dimensions": 1536,
      "similarity": "cosine"
    },
    {
      "type": "property",
      "name": "issue_source_index",
      "properties": ["source"]
    },
    {
      "type": "property",
      "name": "issue_extracted_by_index",
      "properties": ["extracted_by"]
    },
    {
      "type": "property",
      "name": "issue_trust_score_index",
      "properties": ["trust_score"]
    },
    {
      "type": "property",
      "name": "issue_verification_status_index",
      "properties": ["verification_status"]
    }
  ],
  "example": {
    "issue_id": "issue_001",
    "description": "Whether the mandatory death penalty for murder violates the right to life guaranteed under the Constitution",
    "issue_type": "constitutional",
    "legal_domain": ["criminal", "constitutional"],
    "keywords": ["death penalty", "right to life", "constitutional validity"],
    "complexity": "complex"
  }
}
